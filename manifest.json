{
  "manifest_version": 3,
  "name": "AutoBrowse",
  "version": "1.0.0",
  "description": "Build and manage browser automations for your favorite websites",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  "optional_permissions": [
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoBrowse"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["iframe-bridge.js", "iframe-manager.js", "executor.js", "content.js"],
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["iframe-bridge.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html"
}
